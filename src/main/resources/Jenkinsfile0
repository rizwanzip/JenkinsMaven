pipeline {
      agent any
      stages {
            stage('Gradle Build Application') {
                  steps {
                        echo '<<<Starting Build>>>'
						bat  'gradlew build'						
                        echo '<<<End Build>>>'
                  }
				  post {
						success{
								echo '<<<Archiving the Aritifact>>>'
								archiveArtifacts artifacts: '**/*.war'
							}
						}
				  
            }
            stage('Deploy in Staging Envoirnment') {
                  steps {                        
						build job: 'DeployApplicationStagingEnv'
                  }
            }
            
      }
}